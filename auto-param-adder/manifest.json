{
    "manifest_version": 3,
    "name": "ParamAdder",
    "version": "1.0.0",
    "description": "Automatically add query parameters to all URLs",
    "permissions": [
        "storage",
        "webNavigation",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "js/background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/content.js"],
            "run_at": "document_start",
            "all_frames": false
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "32": "icons/icon-32.png",
            "128": "icons/icon-128.png"
        }
    },
    "icons": {
        "32": "icons/icon-32.png",
        "128": "icons/icon-128.png"
    }
}